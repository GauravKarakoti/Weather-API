SCRAPE_API_FIRST="https://www.indiatoday.in/weather/"
SCRAPE_API_LAST="-weather-forecast-today"
SCRAPE_API_FALLBACK = "https://www.accuweather.com/en/search-locations?query="
DATE_CLASS=".wtr_hdr_dte"
TEMPERATURE_CLASS=".wtr_tmp_rhs"
MIN_MAX_TEMPERATURE_CLASS=".wtr_hdr_rhs_ul li .wtr_hdr_rhs_val"
HUMIDITY_PRESSURE_CLASS=".wtr_crd_li .wtr_crd_rhs"
PORT=3003
CONDITION_CLASS=".wtr_tmp_lhs"
ALLOWED_ORIGIN="http://localhost:3003"
ALLOWED_ORIGIN2="https://weather-api-ex1z.onrender.com"
ALLOWED_ORIGIN3="https://weather-available.netlify.app"
ALLOWED_ORIGIN4="http://127.0.0.1:5500"
RECENT_SEARCH_LIMIT=10
API_URL="https://weather-api-ex1z.onrender.com"
SPECIAL_API_KEY=your-api-key-here
# Admin Security Configuration (REQUIRED)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here
ADMIN_EMAIL=admin@yourdomain.com
# Email Configuration
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-gmail-app-password
# Application Configuration
NODE_ENV=production
DATABASE_URL = URL
# Cloud Redis Configuration (Upstash, Redis Cloud, etc.)
REDIS_HOST=your-redis-host.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TLS=true
# Cache Configuration
# Set to false to disable caching and stop Redis connection attempts
CACHE_WARMING_ENABLED=true
CACHE_WARMING_INTERVAL_HOURS=6
BASE_URL=http://localhost:3003
# OAuth 2.0 Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=604800
OAUTH_CLIENT_ID=weather-api-client
OAUTH_CLIENT_SECRET=your-oauth-client-secret-change-this
TOKEN_STORAGE=memory
TRUST_PROXY=true
ENABLE_METRICS=""
LOG_FILE_PATH=./logs
LOG_LEVEL=''
METRICS_PORT=3004
npm_package_version=1.0.0
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d